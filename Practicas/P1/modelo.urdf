<robot name="Practica-1">
<!-- Materiales -->
<material name="red">
<color rgba="1 0 0 1"/>
</material>
<material name="green">
<color rgba="0 1 0 1"/>
</material>
<material name="blue">
<color rgba="0 0 1 1"/>
</material>
<material name="yellow">
<color rgba="1 1 0 1"/>
</material>
<material name="magenta">
<color rgba="1 0 1 1"/>
</material>
<material name="cyan">
<color rgba="0 1 1 1"/>
</material>
<material name="black">
<color rgba="0 0 0 1"/>
</material>

<!-- Definición de eslabones -->
<link name="world_link">
</link>
<link name="base_link">
<visual>
<origin xyz="0 0 0" rpy="0 0 0"/>
<geometry>
<cylinder radius="0.15" length="0.1"/>
</geometry>
<material name="black">
</material>
</visual>
</link>
<link name="trunk_link">
<visual>
  <origin xyz="0 0 0.2" rpy="0 0 0"/>
<geometry>
<cylinder radius="0.06" length="0.4"/>
</geometry>
<material name="red">
</material>
</visual>
</link>
<link name="shoulder_link">
<visual>
<origin xyz="0.25 0 0" rpy="0 0 0"/>
<geometry>
<box size="0.5 0.06 0.06"/>
</geometry>
<material name="green">
</material>
</visual>
</link>
<link name="forearm_link">
<visual>
<origin xyz="0.25 0 0" rpy="0 0 0"/>
<geometry>
<box size="0.5 0.06 0.06"/>
</geometry>
<material name="magenta"/>
</visual>
</link>
<link name="pinza_link">
<visual>
  <origin xyz="0 0 0" rpy="0 0 0"/>
<geometry>
<cylinder radius="0.03" length="0.15"/>
</geometry>
<material name="yellow">
</material>
</visual>
</link>
<link name="elevador_link">
<visual>
  <origin xyz="0 0 0" rpy="0 0 0"/>
<geometry>
<cylinder radius="0.015" length="0.15"/>
</geometry>
<material name="cyan">
</material>
</visual>
</link>
<!-- Definición de juntas -->
<joint name="world_joint" type="fixed">
<parent link="world_link"/>
<child link="base_link"/>
<origin xyz="0 0 0.05" rpy="0 0 0"/>
<axis xyz="0 0 1"/>
</joint>
<joint name="trunk_joint" type="fixed">
<parent link="base_link"/>
<child link="trunk_link"/>
<origin xyz="0 0 0" rpy="0 0 0"/>
<axis xyz="0 0 1"/>
</joint>
<joint name="shoulder_joint" type="revolute">
<parent link="trunk_link"/>
<child link="shoulder_link"/>
<origin xyz="0 0 0.4" rpy="0 0 0"/>
<axis xyz="0 0 1"/>
</joint>
<joint name="forearm_joint" type="revolute">
<parent link="shoulder_link"/>
<child link="forearm_link"/>
<origin xyz="0.45 0 0.06" rpy="0 0 0"/>
<axis xyz="0 0 1"/>
</joint>
<joint name="pinza_joint" type="fixed">
<parent link="forearm_link"/>
<child link="pinza_link"/>
<origin xyz="0.45 0 -0.1" rpy="0 0 0"/>
<axis xyz="0 0 1"/>
</joint>
<joint name="elevador_joint" type="prismatic">
<parent link="pinza_link"/>
<child link="elevador_link"/>
<origin xyz="0 0 0" rpy="0 0 0"/>
<axis xyz="0 0 1"/>
<limit effort="10.0" lower="-0.15" upper="0" velocity="0.5"/>
</joint>
</robot>
